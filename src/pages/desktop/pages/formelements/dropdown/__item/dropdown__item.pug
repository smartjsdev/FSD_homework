mixin dropdown__item(item)
    +blockWrap('item')
        +blockTitle({
            selector: 'h3',
            text: item.title,
            mode: ['montserratBold', 'uppercase']})
        +blockWrap('itemCounter')
            +blockTitle({
            selector: 'h3',
            text: '-',
            mode: ['montserrat', 'darkShade025', 'decrement']})
            +blockTitle({
            selector: 'div',
            text: '0',
            mode: ['montserratBold', 'value']})(value!=attributes.value data_plural!=attributes.data_plural)
            +blockTitle({
            selector: 'h3',
            text: '+',
            mode: ['montserrat', 'darkShade050', 'increment']})
            //- +blockWrap('decrement', ['darkShade025', 'montserrat']) -
            //- +blockWrap('value')(value!=attributes.value data_plural!=attributes.data_plural) 0
            //- +blockWrap('increment', ['visible']) +