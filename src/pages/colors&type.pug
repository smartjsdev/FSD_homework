include utils/mixins
include utils/variables


    include layout/main
      +title('Colors & type', 'This page countain the colors & type')
    body.item-page
      .colors-type.item-page__colors-type
        .logo.colors-type__logo
          include /static/desktop/pages/colors&type/logo/logo
        .colors.colors-type__colors
          include /static/desktop/pages/colors&type/color-sample/color-sample
          +color-sample('Dark Shade 100%','#1F2041')
          +color-sample('Dark Shade 75%','#1F2041')
          +color-sample('Dark Shade 50%','#1F2041')
          +color-sample('Dark Shade 25%','#1F2041')
          +color-sample('Dark Shade 5%','#1F2041')
          +color-sample('Purple','#BC9CFF')
          +color-sample('Green','#6FCF97')
        .type.colors-type__type
          include /static/desktop/pages/colors&type/type-sample/type-sample
          +type-sample('H1','This one is the sub-section or widget title','h1', ['quicksand-bold'])
          +type-sample('H2','Next one is the item title inside widgets', 'h2',  ['quicksand-bold'])
          +type-sample('H3','This is a label or CTA text', 'h3', ['uppercase', 'montserrat-bold'])
          +type-sample('Body','This is the body text which is used for most of the design, like paragraphs, lists, etc.')