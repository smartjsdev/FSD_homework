include /assets/pug/mixins
include /assets/pug/variables


    include ../layout/main
      +page('Form Elements', 'This page countain the form & elements', 'pageFormElements')
    body(class= page_class)
      
      +blockWrap('logo')
        include /components/logo/logo

      //- Общий контейнер
      +blockWrap('container')
        //- Содержимое первой по горизонтали половины страницы
        +blockWrap('mixedContent')
          //- Первая колонка - формы
          +blockWrap('forms')
            include /components/blockTitle/blockTitle
            include /components/blockInput/blockInput
            //- Текстовое поле
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'text field',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput()
            //- Текстовое поле сфокусированное по умолчанию/при наведении
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'text field',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'hover / focus',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                text:'This is pretty awesome'})(autofocus)
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'прибытие',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                type:'text',
                text:'',
                value:'Сколько гостей',
                mode:['dropdown','large']})(disabled='disabled')
            //- Текстовое поле с маской
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'masked text field',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                type:'text',
                text:'ДД.ММ.ГГГГ',
                value:'',
                mode:['masked']})
            //- Два дропдауна - даты
            +blockWrap('box', ['slim'])
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'date dropdown',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  type:'text',
                  text:'ДД.ММ.ГГГГ',
                  value:'ДД.ММ.ГГГГ',
                  mode:['dropdown', 'small']})
            +blockWrap('box', ['slim'])
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'date dropdown',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  type:'text',
                  text:'ДД.ММ.ГГГГ',
                  value:'19.08.2019',
                  mode:['dropdown','small']})
            +blockWrap('box')
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'filter date dropdown',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  text:'',
                  type:'text',
                  value:'19 авг - 23 авг',
                  mode:['dropdown','medium']})
            +blockWrap('box')
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'subscrption text field',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  type:'text',
                  text:'Email',
                  value:'',
                  mode:['post','medium']})
          //- Вторая колонка - формы
          +blockWrap('checkboxTypes')
            include /components/checkbox/checkbox
            include /components/rateStars/rateStars
            //- Чекбокс простой
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'checkbox buttons',
                mode: ['montserratBold', 'uppercase']})
              +checkbox({type:'checkbox', items:[
                {option:'Можно курить'},
                {option:'Можно с питомцами', checked:'checked'},
                {option:'Можно пригласить гостей \n(до 10 человек)', checked:'checked'}]})
            //- Чекбокс радио
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'radio buttons',
                mode: ['montserratBold', 'uppercase']})
              +checkbox({type:'radio', items:[
                {option:'Мужчина', checked:'checked'},
                {option:'Женщина'}]})
            //- Тоггл
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'toggle',
                mode: ['montserratBold', 'uppercase']})
              +checkbox({type:'toggle', items:[
                {option:'Получать спецпредложения', checked:'checked'},
                {option:'Получать спецпредложения'}]})
            //- Лайк буттон
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'like button',
                mode: ['montserratBold', 'uppercase']})
              +checkbox({type:'like', items:[
                {option:'2'},
                {option:'12', checked:'checked'}]})
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'rate button',
                mode: ['montserratBold', 'uppercase']})
              +rateStars('4')           
              +rateStars('5')           
          +blockWrap('elements')
            include /components/rangeSlider/rangeSlider
            include /components/button/button
            include /components/pagination/pagination
            +rangeSlider()
            +blockWrap('buttons')
              +blockTitle({
                  selector: 'h3',
                  text: 'buttons',
                  mode: ['montserratBold', 'uppercase']})
              +blockWrap('box')
                +button({type:'fillDefault',text:'click me'})
                +button({type:'fillDisabled',text:'click me'})
              +blockWrap('box')
                +button({type:'borderedDefault',text:'click me'})
                +button({type:'borderedDisabled',text:'click me'})
              +blockWrap('box')
                +button({type:'hollowDefault',text:'click me'})
                +button({type:'hollowDisabled',text:'click me'})
              +blockWrap('box')
                +button({type:'fillLarge',text:'перейти к оплате'})
            +blockWrap('box')
                +blockTitle({
                  selector: 'h3',
                  text: 'pagination',
                  mode: ['montserratBold', 'uppercase']})
                +pagination('1 – 12 из 100+ вариантов аренды')
        +blockWrap('dropdowns')
          +blockWrap('wrapRoom')
            //- Дропдаун простой свернутый
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                  type:'text',
                  text:'',
                  value:'2 спальни, 2 кровати...',
                  mode:['dropdown','medium']})(disabled='disabled')
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'expanded',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                text:'',
                type:'text',
                value:'2 спальни, 2 кровати...',
                mode:['dropdown','medium', 'opened']},
                  {case:
                    [{title: 'спальни', qty: 2, unique: true,
                    data: {
                    single:'спальня',
                    numbering: 'спальни',
                    plural: 'спален'
                    }},
                    {title: 'кровати', qty: 2, unique: true,
                    data: {
                    single:'кровать',
                    numbering: 'кровати',
                    plural: 'кроватей'
                    }},
                    {title: 'ванные комнаты', qty: 0, unique: true,
                    data: {
                    single:'ванная комната',
                    numbering: 'ванные комнаты',
                    plural: 'ванных комнат'
                    }}]
                  })(disabled='disabled')
          +blockWrap('wrapGuests')
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockInput({
                text:'',
                type:'text',
                value:'Сколько гостей',
                mode:['dropdown','large', 'opened']},
                {case:
                  [{title: 'взрослые', qty: 0, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'дети', qty: 0, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'младенцы', qty: 0, unique: true,
                  data: {
                  single:'младенец',
                  numbering: 'младенца',
                  plural: 'младенцев'
                  }}]})(disabled='disabled')
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockInput({
                text:'',
                type:'text',
                value:'Сколько гостей',
                mode:['dropdown','large', 'opened']},
                {case: 
                  [{title: 'взрослые', qty: 2, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'дети', qty: 1, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'младенцы', qty: 0, unique: true,
                  data: {
                  single:'младенец',
                  numbering: 'младенца',
                  plural: 'младенцев'
                  }}]
                })(disabled='disabled')
        +blockWrap('checkboxList')
          include /components/dropdown/dropdown
          +blockWrap('expandable')
            +blockWrap('box')
              +dropdown({
                type:'checkbox',
                input:{
                  type: 'text',
                  text:'',
                  value:'expandable checkbox list',
                  state:'disabled'},
                options:[],
                mode:['borderless', 'uppercase', 'medium']})
            +blockWrap('box')
              +dropdown({
                type:'checkbox',
                input:{
                  type: 'text',
                  text:'',
                  value:'expandable checkbox list',
                  state:'disabled'},
                options:[ 
                  {value:'Завтрак'},
                  {value:'Письменный стол', checked:'checked'},
                  {value:'Стул для кормления', checked:'checked'},
                  {value:'Кроватка', checked:'checked'},
                  {value:'Телевизор'},
                  {value:'Шампунь'},
                  {value:'Телевизор'},
                  {value:'Шампунь'}],
                mode:['borderless', 'uppercase', 'expanded', 'medium']})
          +blockWrap('rich')
            +blockWrap('box')
              +dropdown({
                type:'listRich',
                state:'list',
                input:{
                  type: 'text',
                  text:'',
                  value:'rich checkbox buttonst',
                  state:'disabled'},
                options:[{
                  value:'Широкий коридор',
                  description:'Ширина коридоров в номере\n не менее 91 см.',
                  mode:['montserratBold','darkShade075']},
                  {value:'Помощник для инвалидов',
                  description:'На 1 этаже вас встретит специалист\n и проводит до номера.',
                  mode:['montserratBold', 'darkShade075']}],
                mode:['borderless', 'uppercase', 'expanded']})
            +blockWrap('box')
              +dropdown({
                type:'listBullet',
                state:'list',
                input:{
                  type: 'text',
                  text:'',
                  value:'rich checkbox buttonst',
                  state:'disabled'},
                options:[
                  {value:'Нельзя с питомцами',
                  mode:['circle', 'montserrat24','darkShade075']},
                  {value:'Без вечеринок и мероприятий',
                  mode:['circle', 'montserrat24','darkShade075']},
                  {value:'Время прибытия — после 13:00,\n а выезд до 12:00',
                  mode:['circle', 'montserrat24','darkShade075']}],
                mode:['borderless', 'uppercase', 'expanded']})
        +blockWrap('advantages')
          include /components/benefit/benefit
          +blockWrap('box')
            +benefit({
              icon: 'insert_emoticon',
              name:'Комфорт',
              description:'Шумопоглощающие стены'
            })
            +benefit({
              icon: 'location_city',
              name:'Удобство',
              description:'Окно в каждой из спален'
            })
        +blockWrap('social')
          include /components/review/review
          +blockWrap('box')
            +review({
              photo:'photo01.png',
              name:'Мурад Сарафанов',
              date:'5 дней назад',
              text:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})