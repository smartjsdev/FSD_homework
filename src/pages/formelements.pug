            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'text field',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput()
            //- Текстовое поле сфокусированное по умолчанию/при наведении
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'text field',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'hover / focus',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                text:'This is pretty awesome'})(autofocus)
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                type:'text',
                text:'',
                value:'Сколько гостей',
                mode:['dropdown','large']})(disabled='disabled')
            //- Текстовое поле с маской
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'masked text field',
                mode: ['montserratBold', 'uppercase']})
              +blockTitle({
                selector: 'h3',
                text: 'default',
                mode: ['darkShade050', 'uppercase']})
              +blockInput({
                type:'text',
                text:'ДД.ММ.ГГГГ',
                value:'',
                mode:['masked']})
            //- Два дропдауна - даты
            +blockWrap('box', ['slim'])
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'date dropdown',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  type:'text',
                  text:'ДД.ММ.ГГГГ',
                  value:'ДД.ММ.ГГГГ',
                  mode:['dropdown', 'small']})
            +blockWrap('box', ['slim'])
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'date dropdown',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  type:'text',
                  text:'ДД.ММ.ГГГГ',
                  value:'19.08.2019',
                  mode:['dropdown','small']})
            +blockWrap('box')
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'filter date dropdown',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  text:'',
                  type:'text',
                  value:'19 авг - 23 авг',
                  mode:['dropdown','medium']})
            +blockWrap('box')
              +blockWrap('dateDropdown')
                +blockTitle({
                  selector: 'h3',
                  text: 'subscrption text field',
                  mode: ['montserratBold', 'uppercase']})
                +blockInput({
                  type:'text',
                  text:'Email',
                  value:'',
                  mode:['post','medium']})
          //- Вторая колонка - формы
          +blockWrap('checkboxTypes')
            include desktop/pages/formelements/checkbox/checkbox
            include desktop/pages/formelements/rate/rate
            //- Чекбокс простой
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'checkbox buttons',
                mode: ['montserratBold', 'uppercase']})
              +checkbox(type, [
                {case:'Можно курить'},
                {case:'Можно с питомцами', checked:'checked'},
                {case:'Можно пригласить гостей \n(до 10 человек)', checked:'checked'}])
            //- Чекбокс радио
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'radio buttons',
                mode: ['montserratBold', 'uppercase']})
              +checkbox('radio', [
                {case:'Мужчина', checked:'checked'},
                {case:'Женщина'}])
            //- Тоггл
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'toggle',
                mode: ['montserratBold', 'uppercase']})
              +checkbox('toggle', [
                {case:'Получать спецпредложения', checked:'checked'},
                {case:'Получать спецпредложения'}])
            //- Лайк буттон
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'like button',
                mode: ['montserratBold', 'uppercase']})
              +checkbox('like', [
                {case:'2'},
                {case:'12', checked:'checked'}])
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'rate button',
                mode: ['montserratBold', 'uppercase']})
              +rate([{count: 5, rate: 4}, {count: 5, rate: 5}])           
