                    single:'ванная комната',
                    numbering: 'ванные комнаты',
                    plural: 'ванных комнат'
                    }}]
                  })(disabled='disabled')
          +blockWrap('wrapGuests')
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockInput({
                text:'',
                type:'text',
                value:'Сколько гостей',
                mode:['dropdown','large', 'opened']},
                {case:
                  [{title: 'взрослые', qty: 0, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'дети', qty: 0, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'младенцы', qty: 0, unique: true,
                  data: {
                  single:'младенец',
                  numbering: 'младенца',
                  plural: 'младенцев'
                  }}]})(disabled='disabled')
            +blockWrap('box')
              +blockTitle({
                selector: 'h3',
                text: 'dropdown',
                mode: ['montserratBold', 'uppercase']})
              +blockInput({
                text:'',
                type:'text',
                value:'Сколько гостей',
                mode:['dropdown','large', 'opened']},
                {case: 
                  [{title: 'взрослые', qty: 2, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'дети', qty: 1, unique: false,
                  data: {
                  single:'гость',
                  numbering: 'гостя',
                  plural: 'гостей'
                  }},
                  {title: 'младенцы', qty: 0, unique: true,
                  data: {
                  single:'младенец',
                  numbering: 'младенца',
                  plural: 'младенцев'
                  }}]
                })(disabled='disabled')
        +blockWrap('checkboxList')
          include desktop/pages/formelements/dropdown/dropdown
          +blockWrap('box')
            +dropdown({
              type:'checkbox',
              state:'close',
              input:{
                type: 'text',
                text:'',
                value:'expandable checkbox list',
                state:'disabled'},
              case:[],
              mode:['borderless', 'uppercase']})
          +blockWrap('box')
            +dropdown({
