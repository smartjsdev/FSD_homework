include ../../button/button
include ../../blockTitle/blockTitle
include ../../dropdown/dropdown
include ./__separator/menu__separator


mixin menu-components(name, options)
    if name == 'dropdown'
        +dropdown(options)
    if name == 'button'
        +button(options)
    if name == 'separator'
        +separator()
    if name == 'logo'

mixin menu(items)
    +blockWrap('menu')
        each item in items
            +menu-components(item.name, item.options)