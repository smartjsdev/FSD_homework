include ./__item/counter__item
include ./__reset/counter__reset
include ./__apply/counter__apply

mixin counter(options)
    if !options
        - options = {}
    if !options.items
        - options.items = []
    if !options.mode
        - options.mode = []

    +blockWrap('counter', options.mode)
        each item in options.items
            +counter__item(item)
        +counter__reset()
        +counter__apply()
        





