mixin counter__item(item)
    if !options
        - options = {}
    //- if !options.items
    //-     - options.items = []
    
    +blockWrap('item')
        +blockTitle({
            selector: 'h3',
            text: item.title,
            mode: ['montserratBold', 'uppercase']})
        +blockWrap('wrap')
            +blockWrap('decrement')
                +blockTitle({
                selector: 'h3',
                text: '-',
                mode: ['montserrat', 'darkShade025', 'bordered']})
            +blockWrap('value')
                +blockTitle({
                selector: 'div',
                text: item.qty,
                mode: ['montserratBold']})(value!=attributes.value data_plural!=attributes.data_plural)
            +blockWrap('increment')
                +blockTitle({
                selector: 'h3',
                text: '+',
                mode: ['montserrat', 'darkShade050', 'bordered']})